# API Gateway Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Service Registry Configuration
SERVICE_REGISTRY_TYPE=consul
CONSUL_HOST=localhost
CONSUL_PORT=8500
REDIS_URL=redis://localhost:6379

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_FAILED_REQUESTS=true

# Load Balancing Configuration
LOAD_BALANCER_STRATEGY=round-robin
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Circuit Breaker Configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# Service Endpoints (fallback if service discovery fails)
BANKING_SERVICE_URL=http://localhost:3005
NLP_SERVICE_URL=http://localhost:3002
NLU_SERVICE_URL=http://localhost:3003
MCP_SERVICE_URL=http://localhost:3004

# Proxy Configuration
PROXY_TIMEOUT=30000
PROXY_RETRY_ATTEMPTS=3
PROXY_RETRY_DELAY=1000

# Caching Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_INTERVAL=60000

# Logging Configuration
LOG_FILE_PATH=logs/api-gateway.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=10MB