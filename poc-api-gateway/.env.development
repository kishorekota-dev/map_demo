# API Gateway Development Environment Configuration
# Copy this to .env for local development

# ===== SERVER CONFIGURATION =====
PORT=3001
NODE_ENV=development
LOG_LEVEL=debug
HOST=localhost

# ===== SECURITY CONFIGURATION =====
JWT_SECRET=dev-jwt-secret-change-me-in-production
JWT_EXPIRY=24h

# ===== CORS CONFIGURATION =====
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080,http://localhost:8081

# ===== SERVICE REGISTRY CONFIGURATION =====
SERVICE_REGISTRY_TYPE=consul
CONSUL_HOST=localhost
CONSUL_PORT=8500
REDIS_URL=redis://localhost:6379

# ===== RATE LIMITING CONFIGURATION =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_FAILED_REQUESTS=true

# ===== LOAD BALANCING CONFIGURATION =====
LOAD_BALANCER_STRATEGY=round-robin
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# ===== CIRCUIT BREAKER CONFIGURATION =====
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# ===== MICROSERVICE ENDPOINTS =====
# These URLs are used for service-to-service communication
BANKING_SERVICE_URL=http://localhost:3005
NLP_SERVICE_URL=http://localhost:3002
NLU_SERVICE_URL=http://localhost:3003
MCP_SERVICE_URL=http://localhost:3004

# ===== PROXY CONFIGURATION =====
PROXY_TIMEOUT=30000
PROXY_RETRY_ATTEMPTS=3
PROXY_RETRY_DELAY=1000

# ===== CACHING CONFIGURATION =====
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# ===== MONITORING CONFIGURATION =====
METRICS_ENABLED=true
METRICS_INTERVAL=60000
TRACING_ENABLED=true

# ===== LOGGING CONFIGURATION =====
LOG_FILE_PATH=logs/api-gateway.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=10MB

# ===== DEVELOPMENT SPECIFIC =====
# Enable detailed request/response logging in development
DEBUG_REQUESTS=true
DEBUG_RESPONSES=true
DEBUG_PROXY=true