# Enterprise Banking ChatBot UI - Production Environment Configuration

# Next.js Configuration
NODE_ENV=production
PORT=3002
NEXTAUTH_URL=http://localhost:3002
NEXTAUTH_SECRET=enterprise_chatbot_nextauth_secret_2024

# API Integration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api/v1
NEXT_PUBLIC_MCP_SERVER_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME="Enterprise Banking AI Assistant"
NEXT_PUBLIC_APP_ENV=production

# Internal API URLs (for server-side calls)
BANKING_API_URL=http://backend:3000/api/v1
MCP_SERVER_URL=http://mcp-server:3001

# DialogFlow Configuration
GOOGLE_PROJECT_ID=enterprise-banking-chatbot
GOOGLE_APPLICATION_CREDENTIALS=/app/config/dialogflow-service-account.json
DIALOGFLOW_LANGUAGE_CODE=en-US
DIALOGFLOW_SESSION_TIMEOUT=3600

# Authentication & Security
JWT_SECRET=enterprise_banking_jwt_secret_2024_secure_key_for_production
ENCRYPTION_KEY=enterprise_banking_encryption_key_2024_very_secure_for_pii

# LangChain Configuration
LANGCHAIN_TRACING_V2=false
LANGCHAIN_PROJECT=enterprise-banking-chatbot
LANGCHAIN_API_KEY=""

# Session Management
REDIS_URL=redis://:redis_secure_pass_2024@redis:6379
SESSION_TIMEOUT=1800
MAX_SESSIONS_PER_USER=3

# Application Features
ENABLE_GUEST_MODE=true
ENABLE_VOICE_INPUT=false
ENABLE_FILE_UPLOAD=false
MAX_MESSAGE_LENGTH=2000

# Logging and Monitoring
LOG_LEVEL=info
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=50
