{
  "name": "mcp-sample-demo",
  "version": "2.0.0",
  "description": "Enhanced MCP Client and Server Demo with Backend API and WebSocket Support",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "server": "node mcp-server.js",
    "server:enhanced": "node mcp-server-enhanced.js",
    "client": "node mcp-client.js",
    "backend": "node backend-api.js",
    "backend:enhanced": "node backend-api-enhanced.js",
    "dev": "concurrently \"npm run backend\" \"npm run server\" \"sleep 2 && npm run client\"",
    "dev:enhanced": "concurrently \"npm run backend:enhanced\" \"npm run server:enhanced\" \"sleep 3 && node demo-client.js\"",
    "test": "node test.js",
    "demo": "node index.js demo",
    "demo:enhanced": "./demo-enhanced.sh",
    "docker:build": "docker build -t mcp-demo .",
    "docker:run": "docker run -p 3001:3001 mcp-demo",
    "docker:compose": "docker-compose up --build"
  },
  "keywords": ["mcp", "model-context-protocol", "demo", "nodejs", "websocket", "real-time"],
  "author": "Demo Developer",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "concurrently": "^8.2.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
