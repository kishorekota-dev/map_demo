# AI Orchestrator Service Configuration
# Environment: Development

# ===== SERVER CONFIGURATION =====
NODE_ENV=development
PORT=3007
HOST=localhost
LOG_LEVEL=debug

# ===== DATABASE CONFIGURATION =====
# PostgreSQL for session management
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_orchestrator
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_IDLE=10000

# ===== REDIS CONFIGURATION =====
# Redis for caching and temporary state
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# ===== OPENAI CONFIGURATION =====
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# ===== MCP SERVICE CONFIGURATION =====
MCP_SERVICE_URL=http://localhost:3004
MCP_SERVICE_TIMEOUT=30000
MCP_RETRY_ATTEMPTS=3
MCP_RETRY_DELAY=1000

# ===== MICROSERVICE ENDPOINTS =====
NLU_SERVICE_URL=http://localhost:3003
BANKING_SERVICE_URL=http://localhost:3005
CHAT_BACKEND_URL=http://localhost:3006

# ===== SECURITY CONFIGURATION =====
JWT_SECRET=ai-orchestrator-jwt-secret-change-in-production
JWT_EXPIRY=24h
API_KEY=dev-api-key-change-in-production

# ===== CORS CONFIGURATION =====
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3006,http://localhost:8081

# ===== WORKFLOW CONFIGURATION =====
MAX_WORKFLOW_STEPS=50
WORKFLOW_TIMEOUT=300000
HUMAN_FEEDBACK_TIMEOUT=300000
MAX_RETRIES=3

# ===== SESSION CONFIGURATION =====
SESSION_TTL=1800000
SESSION_CLEANUP_INTERVAL=300000
MAX_SESSIONS_PER_USER=5

# ===== LANGGRAPH CONFIGURATION =====
GRAPH_RECURSION_LIMIT=50
GRAPH_DEBUG_MODE=true
CHECKPOINT_ENABLED=true

# ===== PROMPT CONFIGURATION =====
DEFAULT_SYSTEM_PROMPT=You are a helpful banking assistant.
MAX_PROMPT_LENGTH=4000

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# ===== MONITORING =====
ENABLE_METRICS=true
METRICS_INTERVAL=60000
