# AI Orchestrator Service - Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3007
LOG_LEVEL=debug

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_orchestrator_dev
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_POOL_MAX=5
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000

# MCP Service Configuration
# HTTP-based MCP (legacy/fallback)
MCP_SERVICE_URL=http://localhost:3005/api/tools
MCP_TIMEOUT=30000
MCP_MAX_RETRIES=3

# True MCP Protocol (SSE-based)
MCP_SSE_URL=http://localhost:3005/mcp/sse
MCP_PREFER_PROTOCOL=true
MCP_ENABLE_FALLBACK=true

# Session Configuration
SESSION_TTL=86400
SESSION_CLEANUP_INTERVAL=3600

# Workflow Configuration
WORKFLOW_MAX_STEPS=20
WORKFLOW_TIMEOUT=60000
WORKFLOW_CHECKPOINT_ENABLED=true

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Feature Flags
FEATURE_HUMAN_IN_LOOP=true
FEATURE_TOOL_EXECUTION=true
FEATURE_SESSION_PERSISTENCE=true
FEATURE_CHECKPOINT_RECOVERY=true
