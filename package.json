{
  "name": "credit-card-enterprise-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Credit Card Enterprise System - Monorepo with Backend API, ChatBot UI, Agent UI, and Web UI",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\" \"npm run dev:agent\" \"npm run dev:chatbot\"",
    "dev:backend": "npm run dev --workspace=packages/backend",
    "dev:web": "npm run dev --workspace=packages/web-ui",
    "dev:agent": "npm run dev --workspace=packages/agent-ui",
    "dev:chatbot": "npm run dev --workspace=packages/chatbot-ui",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=packages/backend",
    "build:web": "npm run build --workspace=packages/web-ui",
    "build:agent": "npm run build --workspace=packages/agent-ui",
    "build:chatbot": "npm run build --workspace=packages/chatbot-ui",
    "start": "npm run start --workspaces",
    "start:backend": "npm run start --workspace=packages/backend",
    "start:web": "npm run start --workspace=packages/web-ui",
    "start:agent": "npm run start --workspace=packages/agent-ui",
    "start:chatbot": "npm run start --workspace=packages/chatbot-ui",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces",
    "install:all": "npm install && npm install --workspaces",
    "setup": "npm run install:all && npm run build:shared",
    "build:shared": "npm run build --workspace=packages/shared",
    "migrate:backend": "chmod +x ./tools/migrate-backend.sh && ./tools/migrate-backend.sh",
    "mcp:start": "npm run mcp:start --workspace=packages/backend",
    "mcp:test": "npm run mcp:test --workspace=packages/backend"
  },
  "keywords": [
    "credit-card",
    "monorepo",
    "enterprise",
    "backend",
    "frontend",
    "chatbot",
    "agent-ui",
    "web-ui"
  ],
  "author": "Credit Card Enterprise Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.0",
    "lerna": "^7.1.0",
    "prettier": "^3.0.0",
    "eslint": "^8.45.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
