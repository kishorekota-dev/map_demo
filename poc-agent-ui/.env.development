# POC Agent UI Frontend Environment Configuration
# Copy this to .env for local development

# ===== SERVER CONFIGURATION =====
PORT=3007
NODE_ENV=development
LOG_LEVEL=debug
HOST=localhost

# ===== SECURITY CONFIGURATION =====
JWT_SECRET=dev-jwt-secret-change-me-in-production-2024
JWT_EXPIRY=8h
SESSION_SECRET=dev-session-secret-change-me-in-production-2024

# ===== CORS CONFIGURATION =====
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3006,http://localhost:3007

# ===== MICROSERVICE ENDPOINTS =====
# Inter-service communication URLs
API_GATEWAY_URL=http://localhost:3001
CHAT_BACKEND_URL=http://localhost:3006
BANKING_SERVICE_URL=http://localhost:3005
NLP_SERVICE_URL=http://localhost:3002
NLU_SERVICE_URL=http://localhost:3003
MCP_SERVICE_URL=http://localhost:3004

# ===== WEBSOCKET CONFIGURATION =====
CHAT_WS_URL=ws://localhost:3006/socket.io
WS_RECONNECT_ATTEMPTS=5
WS_RECONNECT_DELAY=3000
WS_TIMEOUT=30000

# ===== AGENT CONFIGURATION =====
AGENT_AUTHENTICATION_URL=http://localhost:3006/auth/token
AGENT_SESSION_TIMEOUT=28800000
MAX_CONCURRENT_CHATS=10
AGENT_STATUS_UPDATE_INTERVAL=30000
AGENT_IDLE_TIMEOUT=1800000

# ===== CHAT CONFIGURATION =====
MAX_MESSAGE_LENGTH=2000
MESSAGE_HISTORY_LIMIT=100
TYPING_INDICATOR_TIMEOUT=3000
FILE_UPLOAD_MAX_SIZE=10MB
AUTO_REFRESH_INTERVAL=30000

# ===== QUEUE MANAGEMENT =====
QUEUE_REFRESH_INTERVAL=5000
ESCALATION_TIMEOUT=300000
PRIORITY_LEVELS=low,medium,high,urgent
DEFAULT_PRIORITY=medium

# ===== UI CONFIGURATION =====
THEME=light
ENABLE_NOTIFICATIONS=true
NOTIFICATION_SOUND=true
AUTO_ACCEPT_CHATS=false
SHOW_CUSTOMER_INFO=true
ENABLE_QUICK_RESPONSES=true

# ===== REDIS CONFIGURATION =====
REDIS_URL=redis://localhost:6379
REDIS_SESSION_TTL=28800
REDIS_AGENT_STATUS_TTL=300

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
MESSAGE_RATE_LIMIT_WINDOW=60000
MESSAGE_RATE_LIMIT_MAX=120

# ===== LOGGING CONFIGURATION =====
LOG_FILE_PATH=logs/agent-ui.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=10MB

# ===== HEALTH CHECK CONFIGURATION =====
HEALTH_CHECK_INTERVAL=30000
SERVICE_TIMEOUT=5000

# ===== DEVELOPMENT SPECIFIC =====
# Enable detailed agent dashboard logs in development
DEBUG_AGENT_OPERATIONS=true
DEBUG_CHAT_PROCESSING=true
DEBUG_WEBSOCKET_COMMUNICATION=true
DEBUG_QUEUE_MANAGEMENT=true
MOCK_CUSTOMER_DATA=true
ENABLE_DEV_TOOLS=true
LOG_CUSTOMER_INTERACTIONS=true
WEBPACK_DEV_SERVER=true