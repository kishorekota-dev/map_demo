# Banking Service Environment Configuration

# Server Configuration
PORT=3005
NODE_ENV=development
LOG_LEVEL=info

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h
BCRYPT_ROUNDS=12

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004

# Database Configuration (when implemented)
DATABASE_URL=postgresql://user:password@localhost:5432/poc_banking
DB_POOL_MIN=2
DB_POOL_MAX=10

# Service Discovery
SERVICE_NAME=poc-banking-service
SERVICE_VERSION=1.0.0
REGISTRY_URL=http://localhost:8500

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External Services
NLP_SERVICE_URL=http://localhost:3002
NLU_SERVICE_URL=http://localhost:3003
MCP_SERVICE_URL=http://localhost:3004

# Banking Configuration
DAILY_TRANSFER_LIMIT=10000
MONTHLY_TRANSFER_LIMIT=50000
FRAUD_THRESHOLD_AMOUNT=5000
